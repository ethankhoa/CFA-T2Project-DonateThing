<p id="notice"><%= notice %></p>

<h1>Donation Bags</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Bag status</th>
      <th>Total quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @donation_bags.each do |donation_bag| %>
      <tr>
        <td><%= donation_bag.user %></td>
        <td><%= donation_bag.bag_status %></td>
        <td><%= donation_bag.total_quantity %></td>
        <td><%= link_to 'Show', donation_bag %></td>
        <td><%= link_to 'Edit', edit_donation_bag_path(donation_bag) %></td>
        <td><%= link_to 'Destroy', donation_bag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Donation Bag', new_donation_bag_path %>
