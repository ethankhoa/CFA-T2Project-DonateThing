
  <div class="columns">
    <div class="column is-4">
      <h4 class="subtitle is-5"><%= product.name %></h4>
    </div>
    <div class="column is-8">
      <%= form_for :bag_item do |f| %>
      <div class="field right">
        <p class="control">

        Price:

            <%= number_to_currency product.price %>
        </p>

          <p class="control">
            <%= f.number_field :quantity, value: 1, min: 1, class: "input", style: "width:40px;" %>

            <%= f.hidden_field :product_id, value: product.id %>
            <%= f.submit "Add to Bag", class: "button is-primary" %>
            <%= link_to "Delete", product, { data: { confirm: "Are you sure you wish to delete the product '#{product.name}' from your pantry?" }, method: :delete, class: "button is-danger" } %>

            </p>
      </div>

    </div>
  </div>

      <% end %>
