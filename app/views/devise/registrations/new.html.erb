<section class="hero is-fullheight is-dark is-bold">
   <div class="hero-body">
     <div class="container">
       <div class="columns is-vcentered">
         <div class="column is-4 is-offset-4">
           <h1 class="title">
             Register an Account
           </h1>
           <div class="box">
             <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
             <%= devise_error_messages! %>

             <label class="label">Name</label>
             <p class="control">
               <%= f.text_field :name, class: "input", placeholder: "John Smith", autofocus: true %>
             </p>
             <label class="label">Email</label>
             <p class="control">
               <%= f.email_field :email, class: "input", placeholder: "jsmith@example.org" %>
             </p>
             <label class="label">Username</label>
             <p class="control">
               <%= f.text_field :username, class: "input", placeholder: "jsmith" %>
             </p>
             <hr>
             <label class="label">Password</label>
             <p class="control">
               <% if @minimum_password_length %>
               <%= f.password_field :password, class: "input", placeholder: "#{@minimum_password_length} characters minimum", autocomplete: "off" %>
               <% end %>

             </p>
             <label class="label">Confirm Password</label>
             <p class="control">
               <%= f.password_field :password_confirmation, class: "input", autocomplete: "off" %>
             </p>
             <hr>
             <p class="control">
               <p class="actions">
                 <%= f.submit "Sign up", class: "button is-primary" %>
                 <button class="button is-default"><%= link_to 'Cancel', cancel_user_registration_path %></button>
               </p>
             </p>
             <% end %>
             <hr>
             <p class="actions">
               <button class="button is-default">
                 <span class="icon">
                   <i class="fa fa-facebook-square"></i>
                 </span><%= link_to 'Sign up with Facebook', user_facebook_omniauth_authorize_path %>
               </button>
             </p>
             <br>
           </div>
           <p class="has-text-centered">
             Already have an account?
             <%= render "devise/shared/links" %>
           </p>
         </div>
       </div>
     </div>
   </div>

 </section>
